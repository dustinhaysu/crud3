<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud3</title>
    <link rel="stylesheet" href="/normalize.css">
    <link rel="stylesheet" href="/style.css">
</head>


<body>
    <h1 data-position="header">May Node and Express be with you.</h1>
<!--from github-->
    <section data-position="add-quote">
        <h2>Add quote</h2>

<!-- method tell browser what kind of request, action tells browser where to send request -->
    <form action="/quotes" method="POST">
        <input type="text" placeholder="name" name="name">
        <input type="text" placeholder="quote" name="quote">
        <button type="submit">Submit</button>
    </form>
</section>
    <!-- <%= quotes %> prints objects unformatted to the DOM-->

    <section data-position="quotes">
    <h2> Quotes </h2>

    <ul class="quotes">
        <!-- Loop through quote -->
        <% for(let i = 0; i < quotes.length; i++) { %>
           <li class="quote">
            <!--Output name from the iterated quote object-->
            <span><%= quotes[i].name %></span>:
            <!--Output quote from the iterated quote object-->
            <span>"<%= quotes[i].quote %>"</span>
           </li> 
        <% } %>
    </ul>
</section>

    <section data-position="update-quote">
    <div>
        <h2>Darth Vader invades!</h2>
        <p>
            Replace first Yoda's quote with a quote written by Darth Vader
        </p>
        <button id="update-button">Replace Yoda's quote</button>
    </div>
    
    </section>

    <section data-position="delete-quote">
    <div>
        <h2>Remove Darth Vader!</h2>
        <p>
            Delete one Darth Vader's quote. Does nothing if there are no more Darth Vader's quote
        </p>
        <button id="delete-button">Delete Darth Vader's quote</button>
    </div>
    <div id="message"></div>
</section>
    
    <script src="\main.js"></script>
</body>
</html>